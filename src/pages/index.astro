---
import Hero from "../components/hero";
import Layout from "../layouts/Layout.astro";
import type { Props as SEOProps } from "../layouts/Layout.astro";
import Navigation from "../components/Navigation.astro";
import Footer from "../components/Footer.astro";
import { SITE_DESCRIPTION, SITE_TITLE } from "../config";
import RSSButton from "../components/RSSButton.astro";

const seo: SEOProps = {
  seo: {
    title: SITE_TITLE,
    description: SITE_DESCRIPTION,
    openGraph: {
      basic: {
        title: "Hey! I'm Jan, a full stack web developer.",
        image: "/og.png",
        type: "website",
      },
      image: {
        width: 1200,
        height: 630,
        type: "image/png",
        alt: "Hey! I'm Jan, a full stack web developer.",
      },
    },
  },
};
---

<Layout {...seo}>
  <div class="min-h-screen flex flex-col justify-between p-4 sm:p-8">
    <Navigation />
    <Hero client:load />
    <Footer />
  </div>
  <RSSButton />
</Layout>
